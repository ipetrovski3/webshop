<div class="container pt-3">
  <div class="jumbotron text-center">
    <div class="row">
      <div class="col">
        <h3><%= @product.name.upcase %></h3>
        <%= image_tag @product.resized_image %>
        <p><%= @product.price %> </p>
      </div>
      <div class="col">
        <h4><%= "Опис за производот(#{@product.name})" %></h4>
        <%= @product.description %>
      </div>  
    </div>
        <%= link_to "НАРАЧАЈ", new_product_order_path(@product), class:"btn btn-success" %>
  </div>  
  
</div>
